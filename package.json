{
  "name": "atom-e2e-tests",
  "version": "1.0.0",
  "description": "E2E testing suite for Atom AI assistant personas",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:python": "cd atomic-docker/python-api && pytest",
    "test:e2e": "./tests/run-e2e-tests.sh",
    "test:e2e:alex": "./tests/run-e2e-tests.sh --persona=alex",
    "test:e2e:maria": "./tests/run-e2e-tests.sh --persona=maria",
    "test:e2e:ben": "./tests/run-e2e-tests.sh --persona=ben",
    "test:e2e:all": "./tests/run-e2e-tests.sh --persona=all",
    "test:e2e:headless": "./tests/run-e2e-tests.sh --persona=all --headless",
    "test:setup": "npm install && npx playwright install",
    "test:report": "npx allure serve tests/results"
  },
  "dependencies": {
    "@hubspot/api-client": "^13.0.0",
    "@microsoft/teams-ai": "^1.7.4",
    "aws-cdk-lib": "^2.206.0",
    "axios": "^1.11.0",
    "botbuilder": "^4.17.0-blobs1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@types/async-retry": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "allure-commandline": "^2.24.1",
    "allure-jest": "^2.9.2",
    "allure-playwright": "^2.9.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-allure": "^0.1.3",
    "playwright": "^1.40.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "testMatch": [
      "**/__tests__/**/*.(test|spec).(js|jsx|ts|tsx)",
      "**/tests/**/*.(test|spec).(js|jsx|ts|tsx)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testTimeout": 60000,
    "setupFilesAfterEnv": ["<rootDir>/tests/setup/jest.setup.js"],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ]
  },
  "allure": {
    "clean": true,
    "resultsDir": "tests/results/allure-results"
  }
}
