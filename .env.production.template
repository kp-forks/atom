# ATOM Production Environment Configuration Template
# Copy this file to .env.production and fill in the real values

# ========================
# Database Configuration
# ========================

# PostgreSQL Database (Recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/atom_db

# LanceDB Vector Database
LANCEDB_PATH=/data/atom/lancedb
LANCEDB_URI=lancedb+file:///data/atom/lancedb

# ========================
# Security & Encryption
# ========================

# Flask Secret Key (64+ characters recommended)
FLASK_SECRET_KEY=your-super-secure-flask-secret-key-with-at-least-64-characters-change-this-in-production

# OAuth Encryption Key (32-byte base64 encoded)
# Generate with: python3 -c "import base64, os; print(base64.urlsafe_b64encode(os.urandom(32)).decode())"
ATOM_OAUTH_ENCRYPTION_KEY=change-me-to-32-byte-base64-encoded-key-generated-as-above

# ========================
# API Keys & Service Credentials
# ========================

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google OAuth (for Calendar, Drive, Gmail)
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Notion Integration
NOTION_API_TOKEN=secret_your-notion-integration-token

# Dropbox App
DROPBOX_APP_KEY=your-dropbox-app-key
DROPBOX_APP_SECRET=your-dropbox-app-secret

# Trello API
TRELLO_API_KEY=your-trello-api-key
TRELLO_API_SECRET=your-trello-api-secret

# Asana OAuth
ASANA_CLIENT_ID=your-asana-client-id
ASANA_CLIENT_SECRET=your-asana-client-secret

# Slack Bot
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# GitHub Personal Access Token
GITHUB_ACCESS_TOKEN=ghp_your-github-personal-access-token

# LinkedIn Marketing API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Plaid (Banking API)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENVIRONMENT=sandbox  # or development, production

# Deepgram (Audio Transcription)
DEEPGRAM_API_KEY=your-deepgram-api-key

# ========================
# Application Configuration
# ========================

# Server Configuration
PYTHON_API_PORT=5058
HOST=0.0.0.0
APP_CLIENT_URL=https://your-domain.com

# Environment Mode
FLASK_ENV=production
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/atom/atom_api.log

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/var/lib/atom/uploads

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ========================
# External Services
# ========================

# Email/SMTP Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# MeiliSearch (Optional)
MEILISEARCH_URL=http://localhost:7700

# Redis (Optional - for caching/sessions)
REDIS_URL=redis://localhost:6379

# RabbitMQ (Optional - for task queues)
RABBITMQ_URL=amqp://localhost:5672

# ========================
# Feature Flags
# ========================

ENABLE_MOCK_SERVICES=false
USE_SQLITE_FALLBACK=false
ENABLE_GOALS=true
ENABLE_CALENDAR=true
ENABLE_TASKS=true
ENABLE_MESSAGES=true
ENABLE_TRANSCRIPTION=true
ENABLE_FINANCIAL=true

# ========================
# Monitoring & Analytics
# ========================

# Sentry (Error Tracking - Optional)
SENTRY_DSN=https://your-sentry-dsn@o123456.ingest.sentry.io/1234567

# ========================
# Security Headers
# ========================

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://app.your-domain.com
FRONTEND_URL=https://your-domain.com

# ========================
# Rate Limiting
# ========================

# API Rate Limits (requests per minute)
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_API=60

# ========================
# Backup & Maintenance
# ========================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Database Backup
DB_BACKUP_PATH=/var/backups/atom
DB_BACKUP_ENCRYPTION_KEY=your-database-backup-encryption-key

# ========================
# Notification Settings
# ========================

# Email Notifications
NOTIFICATION_EMAIL_FROM=notifications@your-domain.com
NOTIFICATION_EMAIL_ADMIN=admin@your-domain.com

# Slack Webhook for Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# ========================
# Performance Tuning
# ========================

# Database Connection Pool
DB_POOL_MIN_CONN=1
DB_POOL_MAX_CONN=20

# Worker Processes
GUNICORN_WORKERS=4
GUNICORN_THREADS=2

# Cache Settings
CACHE_TTL=300  # 5 minutes

# ========================
# Compliance & Legal
# ========================

# GDPR/Privacy Settings
DATA_RETENTION_DAYS=365
PRIVACY_MODE=enabled

# Terms of Service Version
TOS_VERSION=1.0
PRIVACY_POLICY_VERSION=1.0

# ========================
# IMPORTANT NOTES
# ========================

# 1. NEVER commit real API keys to version control
# 2. Use environment-specific files: .env.development, .env.production, .env.test
# 3. Rotate keys regularly and use least privilege principles
# 4. Use a secrets manager for production deployments
# 5. Monitor and audit API key usage
# 6. Enable 2FA on all service accounts
# 7. Regularly review and update this configuration
