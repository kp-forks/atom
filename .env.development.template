# ATOM Development Environment Template
# Copy this file to .env.development and customize for your development setup

# ========================
# Database Configuration
# ========================

# SQLite Database (Development)
DATABASE_URL=sqlite:///tmp/atom_dev.db

# LanceDB Vector Database
LANCEDB_PATH=/tmp/atom_lancedb
LANCEDB_URI=lancedb+file:///tmp/atom_lancedb

# ========================
# Security & Encryption
# ========================

# Flask Secret Key (Development)
FLASK_SECRET_KEY=dev-secret-key-change-this-in-production

# OAuth Encryption Key (32-byte base64 encoded)
ATOM_OAUTH_ENCRYPTION_KEY=nCsfAph2Gln5Ag0uuEeqUVOvSEPtl7OLGT_jKsyzP84=

# ========================
# API Keys & Service Credentials
# ========================

# OpenAI API (Development - replace with real key for testing)
OPENAI_API_KEY=sk-dev-openai-api-key-placeholder

# Google OAuth (Development - replace with real credentials)
GOOGLE_CLIENT_ID=dev-google-client-id-placeholder.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=dev-google-client-secret-placeholder

# Notion Integration (Development)
NOTION_API_TOKEN=secret_dev_notion_api_token_placeholder

# Dropbox App (Development)
DROPBOX_APP_KEY=dev_dropbox_app_key_placeholder
DROPBOX_APP_SECRET=dev_dropbox_app_secret_placeholder

# Trello API (Development)
TRELLO_API_KEY=dev_trello_api_key_placeholder
TRELLO_API_SECRET=dev_trello_api_secret_placeholder

# Asana OAuth (Development)
ASANA_CLIENT_ID=dev_asana_client_id_placeholder
ASANA_CLIENT_SECRET=dev_asana_client_secret_placeholder

# Slack Bot (Development)
SLACK_BOT_TOKEN=xoxb-dev-slack-bot-token-placeholder

# GitHub Personal Access Token (Development)
GITHUB_ACCESS_TOKEN=ghp_dev_github_access_token_placeholder

# LinkedIn Marketing API (Development)
LINKEDIN_CLIENT_ID=dev_linkedin_client_id_placeholder
LINKEDIN_CLIENT_SECRET=dev_linkedin_client_secret_placeholder

# Plaid (Banking API - Development)
PLAID_CLIENT_ID=dev_plaid_client_id_placeholder
PLAID_SECRET=dev_plaid_secret_placeholder
PLAID_ENVIRONMENT=sandbox

# Deepgram (Audio Transcription - Development)
DEEPGRAM_API_KEY=dev_deepgram_api_key_placeholder

# ========================
# Application Configuration
# ========================

# Server Configuration
PYTHON_API_PORT=5058
HOST=0.0.0.0
APP_CLIENT_URL=http://localhost:3000

# Environment Mode
FLASK_ENV=development
DEBUG=true

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=/tmp/atom_api.log

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/tmp/atom_uploads

# Session Configuration
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ========================
# Feature Flags
# ========================

ENABLE_MOCK_SERVICES=true
USE_SQLITE_FALLBACK=true
ENABLE_GOALS=true
ENABLE_CALENDAR=true
ENABLE_TASKS=true
ENABLE_MESSAGES=true
ENABLE_TRANSCRIPTION=true
ENABLE_FINANCIAL=true

# ========================
# CORS Configuration
# ========================

CORS_ORIGINS=http://localhost:3000,http://localhost:3001
FRONTEND_URL=http://localhost:3000

# ========================
# Development Notes
# ========================

# 1. Replace placeholder API keys with real values for integration testing
# 2. Mock services will be used when ENABLE_MOCK_SERVICES=true
# 3. For production, use .env.production with real keys and ENABLE_MOCK_SERVICES=false
# 4. Never commit real API keys to version control
