{
  "production": {
    "name": "ATOM Web Development Workflow",
    "version": "2.0.0",
    "description": "Zero-setup cloud-desktop development environment for Next.js applications",
    "environment": "production",

    "cloud_providers": {
      "primary": "vercel",
      "backup": "netlify",
      "fallback": "render"
    },

    "github": {
      "repo_template": "nextjs-tailwind-template",
      "auto_repo_creation": true,
      "webhook_endpoint": "/webhook/github-deployment",
      "token_env": "GITHUB_TOKEN"
    },

    "desktop_app": {
      "build_target": "production",
      "cloud_sync": {
        "websocket_url": "wss://atom-dev-api.vercel.app/live-updates",
        "reconnect_interval": 3000,
        "heartbeat_interval": 10000
      },

      "features": {
        "real_time_builds": true,
        "live_preview": true,
        "mobile_emulation": true,
        "performance_monitoring": true,
        "cost_tracking": true,
        "team_collaboration": false
      },

      "notifications": {
        "build_complete": "toast",
        "build_failed": "dialog",
        "new_deployment": "preview"
      }
    },

    "nextjs_config": {
      "theme": "dark",
      "routing": "app_router",
