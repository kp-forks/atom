# ATOM Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# DO NOT COMMIT .env.local TO VERSION CONTROL!

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=atom_local
POSTGRES_USER=atom_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ===================================================================
# AUTHENTICATION & JWT
# ===================================================================
JWT_SECRET=your-32-character-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-used-for-sensitive-data
SUPERTOKENS_CONNECTION_URI=http://localhost:3567

# ===================================================================
# GOOGLE OAUTH CONFIGURATION
# ===================================================================
# Set up at: https://console.developers.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here

# ===================================================================
# GITHUB OAUTH CONFIGURATION
# ===================================================================
# Set up at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_oauth_app_client_id_here
GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret_here

# ===================================================================
# APPLE SIGN IN CONFIGURATION
# ===================================================================
# Set up at: https://developer.apple.com/account/resources/
APPLE_CLIENT_ID=your_apple_sign_in_service_id_here
APPLE_KEY_ID=your_apple_key_id_here
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
your_apple_private_key_content_here
-----END PRIVATE KEY-----
APPLE_TEAM_ID=your_apple_team_id_here

# ===================================================================
# AI & API SERVICES
# ===================================================================
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENV=sandbox

# ===================================================================
# REDIS CONFIGURATION
# ===================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_if_applicable

# ===================================================================
# CLOUD STORAGE & CDN
# ===================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=us-east-1

# ===================================================================
# SUPPORTING SERVICES
# ===================================================================
HASURA_GRAPHQL_ADMIN_SECRET=your_hasura_admin_secret
POSTGRAPHILE_URL=http://localhost:5000/graphql
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret

# ===================================================================
# DEVELOPMENT TOOLS
# ===================================================================
NEXT_PUBLIC_AUDIO_PROCESSOR_URL=http://localhost:8008
NEXT_PUBLIC_CONNECTION_STATUS_API=http://localhost:8005
NEXT_PUBLIC_ATOMIC_HANDSHAKE_API=http://localhost:3000/api/handshake
