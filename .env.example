# Atom Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/atom_development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=atom_development
DB_USER=atom_user
DB_PASSWORD=change_this_secure_password

# JWT Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# API Keys for External Services
DEEPGRAM_API_KEY=your_deepgram_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENVIRONMENT=sandbox

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Microsoft OAuth Configuration
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# Other OAuth Providers
DROPBOX_CLIENT_ID=your_dropbox_client_id
DROPBOX_CLIENT_SECRET=your_dropbox_client_secret
ASANA_CLIENT_ID=your_asana_client_id
ASANA_CLIENT_SECRET=your_asana_client_secret
BOX_CLIENT_ID=your_box_client_id
BOX_CLIENT_SECRET=your_box_client_secret
TRELLO_CLIENT_ID=your_trello_client_id
TRELLO_CLIENT_SECRET=your_trello_client_secret
SHOPIFY_CLIENT_ID=your_shopify_client_id
SHOPIFY_CLIENT_SECRET=your_shopify_client_secret
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret

# Flask Application Configuration
FLASK_SECRET_KEY=your_flask_secret_key_change_in_production
FLASK_ENV=development
PYTHON_API_PORT=5058

# Frontend Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:5058
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:5058

# Meeting Transcription
MEETING_TRANSCRIPTION_ENABLED=true
MEETING_STORAGE_PATH=/data/meetings

# Audio Processing
AUDIO_PROCESSOR_URL=http://localhost:8081
ATOM_AGENT_URL=http://localhost:8082

# Development Flags
DEBUG=true
ENABLE_MOCK_DATA=false
ENABLE_DEV_TOOLS=true

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=/tmp/uploads

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5058
